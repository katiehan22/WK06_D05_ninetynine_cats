<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = 'Create Cat' %>
<% elsif type == :edit %>
  <% action_url = cat_url(@cat) %>
  <% button_text = 'Edit Cat' %>
<% end %>

<h1><%= button_text %></h1>

<form action="<%= action_url %>" method = "POST">
<% if type == :edit %>
  <input type="hidden" name="_method" value="PATCH">
<% end %>

  <label for="name">Name:</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">
  <br>

  <label for="sex">Sex:</label>
  <input id="sex" type="radio" name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked" : ""%> >Male
  <input id="sex" type="radio" name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked" : ""%> >Female
  <br>

  <label for="color">Color:</label>
  <select id="color" name="cat[color]">
    <option disabled <%= type == :new ? "selected" : "" %>>- Please Select Color-</option>
    <option value="Black" <%= cat.color == "Black" ? "selected" : ""%> >Black</option>
    <option value="White" <%= cat.color== "White" ? "selected" : "" %> >White</option>
    <option value="Orange" <%= cat.color== "Orange" ? "selected" : "" %>>Orange</option>
    <option value="Brown" <%= cat.color== "Brown" ? "selected" : "" %> >Brown</option>
  </select>
  <br>

  <label for="birth_date">Birthday:</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
  <br>

  <label for="description">Description:</label>
  <textarea id="description" name="cat[description]" value="<%= cat.description %>"><%= cat.description %></textarea>
  <br>

  <input type="submit" value="<%= button_text %>"/>
</form>